
@{
    ViewBag.Title = "InstitutionViewOfferedCourse";
}

<h2>Institution View Offered Course</h2>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Institution ID</th>
            <th scope="col">Course Name</th>
            <th scope="col">Course Details</th>
            <th scope="col">Course Fee</th>
            <th scope="col">Course Duration</th>
            <th scope="col">Date</th>
            <th scope="col">Mentor Id</th>
            <th scope="col">Photo</th>


        </tr>
    </thead>
    <tbody>



        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.InstitutionId</td>
                <td>@i.Name</td>
                <td>@i.Details</td>
                <td>@i.Price</td>
                <td>@i.Duration</td>
                <td>@i.Date</td>
                <td>@i.MentorId</td>
                <td>@i.Photo</td>

                <td>
                    <a href="~/A_Institution/InstitutionUpdateOfferedCourse/@i.Id" class="btn btn-primary">Update Course</a>
                </td>

            </tr>


        }

